TZ=Europe/Vienna

# Baseline sampling interval (seconds)
WATCHDOG_INTERVAL_SEC=900

# Trigger thresholds
WATCHDOG_CPU_THRESHOLD_PCT=90
WATCHDOG_TEMP_THRESHOLD_C=85
WATCHDOG_DISK_THRESHOLD_PCT=90

# Safety action: stop containers if temp stays high
# Set WATCHDOG_TEMP_STOP_CONTAINER_NAMES empty to disable auto-stop.
WATCHDOG_TEMP_STOP_THRESHOLD_C=95
WATCHDOG_TEMP_STOP_CONSEC=3
WATCHDOG_TEMP_STOP_CONTAINER_NAMES=owui

# Burst diagnostics
WATCHDOG_BURST_SEC=20
WATCHDOG_BURST_INTERVAL_SEC=2

# Optional: housekeeping (docker hygiene) interval
WATCHDOG_HYGIENE_INTERVAL_SEC=21600

# Containers to sample during burst (comma-separated)
WATCHDOG_CONTAINER_NAMES=owui,tm,context6,qdrant

# Output paths (inside container)
WATCHDOG_LOG_PATH=/data/watchdog.log.jsonl
WATCHDOG_ALERT_PATH=/data/watchdog.alert.jsonl
