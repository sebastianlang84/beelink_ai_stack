# fourier-cycles Config (Non-Secrets)

# Host directory for generated artifacts
FOURIER_OUTPUT_DIR_HOST=/home/wasti/ai_stack/fourier-cycles/output

# In-container output root
FOURIER_OUTPUT_DIR=/data/output

# Analysis horizon (calendar days)
FOURIER_TIMEFRAME_DAYS=1095

# Resample rule applied before signal extraction (for example 1D, 1W)
FOURIER_RESAMPLE_RULE=1D

# Data sources
FOURIER_YAHOO_SYMBOLS=SPY,BTC-USD
FOURIER_FRED_SERIES=DGS10,CPIAUCSL

# Spectrum and stability filters
FOURIER_TOP_K=8
FOURIER_MIN_PRESENCE_RATIO=0.30
FOURIER_MIN_WINDOW_POWER_RATIO=0.03
FOURIER_ROLLING_WINDOW_RATIO=0.35
FOURIER_ROLLING_STEP_RATIO=0.25
FOURIER_ROLLING_WINDOWS_DAYS=360,720,1260
FOURIER_ROLLING_STEP_DAYS=30
FOURIER_MIN_PERIOD_DAYS=30
FOURIER_MAX_PERIOD_DAYS=300
FOURIER_SIGNAL_MODE_YAHOO=log_returns
FOURIER_SIGNAL_MODE_FRED=pct_change
FOURIER_DETREND_ROLLING_DAYS=504
FOURIER_HARMONIC_INCLUDE_TREND=true
FOURIER_SNR_PRESENCE_THRESHOLD=2.0
FOURIER_SNR_PEAK_BANDWIDTH_RATIO=0.05
FOURIER_SNR_BACKGROUND_BANDWIDTH_RATIO=0.25
FOURIER_SNR_BACKGROUND_EXCLUSION_RATIO=0.08
FOURIER_SURROGATE_COUNT=200
FOURIER_SURROGATE_SEED=42
FOURIER_SELECTION_TOP_K=3
FOURIER_SELECTION_MIN_PRESENCE_RATIO=0.60
FOURIER_SELECTION_MIN_NORM_POWER_PERCENTILE=0.75
FOURIER_SELECTION_MIN_PERIOD_DISTANCE_RATIO=0.20
FOURIER_SELECTION_MIN_PHASE_LOCKING_R=0.08
FOURIER_SELECTION_MAX_P_VALUE_BANDMAX=1.00
FOURIER_SELECTION_MIN_AMP_SIGMA=0.06
FOURIER_RANK_WEIGHT_AMP=1.0
FOURIER_RANK_WEIGHT_SNR=1.0
FOURIER_RANK_WEIGHT_PRESENCE=1.0
FOURIER_RANK_WEIGHT_PHASE=1.0
# Optional audit exports
FOURIER_EXPORT_WINDOWS_CSV=false
# Optional non-stationary activity plot
FOURIER_ENABLE_WAVELET_VIEW=false
FOURIER_WAVELET_PERIOD_COUNT=48
FOURIER_MIN_POINTS=180

# HTTP timeout for data fetches
FOURIER_TIMEOUT_SECONDS=30

# Max runtime for API-triggered runs (seconds)
FOURIER_TRIGGER_MAX_RUNTIME_SECONDS=5400
