# fourier-cycles Config (Non-Secrets)

# Host directory for generated artifacts
FOURIER_OUTPUT_DIR_HOST=/home/wasti/ai_stack/fourier-cycles/output

# In-container output root
FOURIER_OUTPUT_DIR=/data/output

# Analysis horizon (calendar days)
FOURIER_TIMEFRAME_DAYS=1095

# Resample rule applied before signal extraction (for example 1D, 1W)
FOURIER_RESAMPLE_RULE=1D

# Data sources
FOURIER_YAHOO_SYMBOLS=SPY,BTC-USD
FOURIER_FRED_SERIES=DGS10,CPIAUCSL

# Spectrum and stability filters
FOURIER_TOP_K=8
FOURIER_MIN_PRESENCE_RATIO=0.30
FOURIER_MIN_WINDOW_POWER_RATIO=0.03
FOURIER_ROLLING_WINDOW_RATIO=0.35
FOURIER_ROLLING_STEP_RATIO=0.25
FOURIER_MIN_PERIOD_DAYS=7
FOURIER_MAX_PERIOD_DAYS=365
FOURIER_SELECTION_TOP_K=3
FOURIER_SELECTION_MIN_PRESENCE_RATIO=0.60
FOURIER_SELECTION_MIN_NORM_POWER_PERCENTILE=0.75
FOURIER_SELECTION_MIN_PERIOD_DISTANCE_RATIO=0.20
FOURIER_MIN_POINTS=180

# HTTP timeout for data fetches
FOURIER_TIMEOUT_SECONDS=30
